generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = env("DATABASE_PROVIDER")
  url      = env("DATABASE_URL")
}

model Sale {
  id        Int      @id @default(autoincrement())
  product   String
  category  String
  amount    Float
  saleDate  DateTime @map("sale_date")
  createdAt DateTime @default(now()) @map("created_at")
}
